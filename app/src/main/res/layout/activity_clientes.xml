<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ClientesActivity">

    <TextView
        android:id="@+id/textViewProdutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Página de Clientes"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/jEditNome"
        android:layout_width="240dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Digite seu nome"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewProdutos" />

    <EditText
        android:id="@+id/jEditCpf"
        android:layout_width="232dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="Digite seu CPF"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jEditNome" />

    <EditText
        android:id="@+id/jEditEndereco"
        android:layout_width="230dp"
        android:layout_height="58dp"
        android:ems="10"
        android:hint="Digite seu endereço"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jEditCpf" />

    <EditText
        android:id="@+id/jEditTel"
        android:layout_width="231dp"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="Digite seu telefone"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jEditEndereco" />

    <EditText
        android:id="@+id/jEditInsta"
        android:layout_width="228dp"
        android:layout_height="64dp"
        android:ems="10"
        android:hint="Digite seu instagram"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jEditTel" />

    <ImageButton
        android:id="@+id/jButtonVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <ImageButton
        android:id="@+id/jButtonAdicionar"
        android:layout_width="44dp"
        android:layout_height="36dp"
        app:layout_constraintEnd_toStartOf="@+id/jButtonBuscar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jEditInsta"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/jButtonBuscar"
        android:layout_width="47dp"
        android:layout_height="41dp"
        app:layout_constraintEnd_toStartOf="@+id/jButtonExcluir"
        app:layout_constraintStart_toEndOf="@+id/jButtonAdicionar"
        app:layout_constraintTop_toBottomOf="@+id/jEditInsta"
        app:srcCompat="?android:attr/actionModeWebSearchDrawable" />

    <ImageButton
        android:id="@+id/jButtonExcluir"
        android:layout_width="51dp"
        android:layout_height="41dp"
        app:layout_constraintEnd_toStartOf="@+id/jButtonListar"
        app:layout_constraintStart_toEndOf="@+id/jButtonBuscar"
        app:layout_constraintTop_toBottomOf="@+id/jEditInsta"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/jButtonListar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/jButtonExcluir"
        app:layout_constraintTop_toBottomOf="@+id/jEditInsta"
        app:srcCompat="@android:drawable/ic_menu_zoom" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/jButtonAdicionar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/jButtonAdicionar"
        app:layout_constraintTop_toBottomOf="@+id/jButtonAdicionar" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/jButtonBuscar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/jButtonBuscar"
        app:layout_constraintTop_toBottomOf="@+id/jButtonBuscar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/jButtonExcluir"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/jButtonExcluir"
        app:layout_constraintTop_toBottomOf="@+id/jButtonExcluir" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/jButtonListar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/jButtonListar"
        app:layout_constraintTop_toBottomOf="@+id/jButtonListar" />

    <ImageButton
        android:id="@+id/jButtonAlterar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alterar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/jButtonAlterar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/jButtonAlterar"
        app:layout_constraintTop_toBottomOf="@+id/jButtonAlterar" />

    <ListView
        android:id="@+id/clientList"
        android:layout_width="409dp"
        android:layout_height="238dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
